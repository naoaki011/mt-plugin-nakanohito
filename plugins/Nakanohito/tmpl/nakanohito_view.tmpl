<mtapp:widget
	class="widget hw-widget"
	label="nakanohito"
	can_close="1">

<p>
There are  recent <mt:var name="nakanohito_num"> visitors' footprints.
</p>

	<mt:if name="error">
	<p><mtvar name="error"></p>
	</mt:if>

	<mt:if name="footprint">
		<table cellpadding="0" margin="0">
		<mt:loop name="footprint">
			<tr><td align="right" width="80" valign="top"><mt:var name="time"></td>
			<td width="200" valign="top">&nbsp;&nbsp;&nbsp;<mt:var name="visitor"></td></tr>
		</mt:loop>
		</table>
	</mt:if>

<p align="right">
Powered by <a href="http://nakanohito.jp/stage/login_form/" target="blank">nakanohito</a>
</p>

</mtapp:widget>